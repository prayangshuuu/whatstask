// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum RepeatType {
  NONE
  DAILY
  WEEKLY
}

model User {
  id             String           @id @default(cuid())
  email          String           @unique
  passwordHash   String
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt

  // notification WhatsApp number where reminders will be sent
  notifyNumber   String?          // optional; reminders use this when set

  todos          Todo[]
  whatsappSession WhatsAppSession?
  reminderLogs  ReminderLog[]
}

model Todo {
  id            String    @id @default(cuid())
  user          User      @relation(fields: [userId], references: [id])
  userId        String

  title         String
  description   String?
  remindAt      DateTime      // first or next reminder time
  repeatType    RepeatType    @default(NONE)
  repeatDays    String?       // JSON or comma-separated days like "MON,TUE" for weekly specific days
  isCompleted   Boolean       @default(false)
  lastNotifiedAt DateTime?    // last time we actually sent a WhatsApp notification

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  reminderLogs  ReminderLog[]
}

model WhatsAppSession {
  id              String   @id @default(cuid())
  user            User     @relation(fields: [userId], references: [id])
  userId          String   @unique

  // login/device-related number (unused for sending; just kept if needed)
  phoneNumber     String?

  status          String   // "none" | "disconnected" | "connecting" | "qr_pending" | "ready" | "error"
  sessionData     String?  // optional serialized session JSON (if we ever use it)

  // QR & status timing
  qrData          String?  // base64 dataURL for current QR code
  lastQrAt        DateTime?
  lastConnectedAt DateTime?

  // Profile info from WhatsApp client
  waNumberRaw     String?  // raw number like "880197801030"
  waDisplayName   String?  // pushname or account name
  waProfilePicUrl String?  // URL returned by whatsapp-web.js

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model ReminderLog {
  id         String   @id @default(cuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String

  todo       Todo     @relation(fields: [todoId], references: [id])
  todoId     String

  sentAt     DateTime
  status     String   // "success" | "failed"
  errorMsg   String?  // store error message if failed

  createdAt  DateTime @default(now())
}

// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum RepeatType {
  NONE
  DAILY
  WEEKLY
}

model User {
  id             String           @id @default(cuid())
  email          String           @unique
  passwordHash   String
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt

  todos          Todo[]
  whatsappSession WhatsAppSession?
  reminderLogs  ReminderLog[]
}

model Todo {
  id            String    @id @default(cuid())
  user          User      @relation(fields: [userId], references: [id])
  userId        String

  title         String
  description   String?
  remindAt      DateTime      // first or next reminder time
  repeatType    RepeatType    @default(NONE)
  repeatDays    String?       // JSON or comma-separated days like "MON,TUE" for weekly specific days
  isCompleted   Boolean       @default(false)
  lastNotifiedAt DateTime?    // last time we actually sent a WhatsApp notification

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  reminderLogs  ReminderLog[]
}

model WhatsAppSession {
  id              String   @id @default(cuid())
  user            User     @relation(fields: [userId], references: [id])
  userId          String   @unique

  phoneNumber     String   // number used to LOGIN to WhatsApp app (business/device number)
  status          String   // "disconnected" | "connecting" | "qr_pending" | "ready" | "error"
  sessionData     String?  // optional serialized session json (for whatsapp-web.js)
  qrData          String?  // base64-encoded QR data URL for frontend
  lastQrAt        DateTime?
  lastConnectedAt DateTime?

  // Profile info from WhatsApp client
  waNumberRaw     String?  // raw number from client.info.wid, e.g. "8801xxxxxx"
  waDisplayName   String?  // pushname or name from WhatsApp
  waProfilePicUrl String?  // profile picture URL

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model ReminderLog {
  id         String   @id @default(cuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String

  todo       Todo     @relation(fields: [todoId], references: [id])
  todoId     String

  sentAt     DateTime
  status     String   // "success" | "failed"
  errorMsg   String?  // store error message if failed

  createdAt  DateTime @default(now())
}
